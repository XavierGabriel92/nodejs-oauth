{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "baseUrl": "src",
    "sourceMap": true,
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types"],
    "types": ["jest", "node"],
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src/*", "test/*", "config/*"]
}
